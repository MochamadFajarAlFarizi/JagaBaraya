<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/ivDetailBerita"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"
            android:contentDescription="Gambar Berita" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvJudulDetailBerita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Judul Berita"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Kategori -->
        <LinearLayout
            android:id="@+id/layoutKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvKategoriDetail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginEnd="6dp"
                android:text="Kategori"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_chip" />

            <TextView
                android:id="@+id/tvKategoriDetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Kategori 2"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_chip" />
        </LinearLayout>

        <!-- Sumber -->
        <TextView
            android:id="@+id/tvSumberDetailBerita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sumber: Media Indonesia"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tvIsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Isi Berita"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- Tombol Share -->
        <TextView
            android:id="@+id/btnShareBerita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bagikan"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="6dp"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
